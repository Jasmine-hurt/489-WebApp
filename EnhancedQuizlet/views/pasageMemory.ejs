<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passage Memory</title>
    <!-- Link to external CSS file -->
    <link rel="stylesheet" href="/css/memoryPassage.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- jQuery (for typing event) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div id="navbar-placeholder"></div>
    <div class="container mt-5">
        <h1>Passage Memory</h1>

        <% terms.forEach((term, index) => { %>
            <div id="term<%= index + 1 %>" class="card mb-3 term <%= index !== 0 ? 'd-none' : '' %>">
                <div class="card-body">
                    <h4 class="card-title">Description</h4>
                    <p id="description<%= index + 1 %>"><%= term.description %></p>
                    <input type="text" id="input<%= index + 1 %>" class="form-control" placeholder="Type the term">
                    <div id="message<%= index + 1 %>" class="mt-2 d-none"></div>
                </div>
            </div>
        <% }) %>

        <div class="d-flex justify-content-between mt-4">
            <button id="previous" class="btn btn-primary" disabled>Previous</button>
            <button id="submit" class="btn btn-success">Submit</button>
            <button id="next" class="btn btn-primary">Next</button>
        </div>
    </div>

    <!-- External JavaScript file -->
    <script src="/js/memoryPassage.js"></script>
    <script>
        fetch('/components/navbar.html')
            .then(response => response.text())
            .then(data => {
                document.getElementById('navbar-placeholder').innerHTML = data;
            });
    </script>
</body>
</html>
