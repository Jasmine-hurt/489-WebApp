<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/studyGuideCreation.css">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
    <!-- Add a navbar placeholder -->
	<%- include('components/navbar') %>

	<div class="container-fluid mt-4">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 col-lg-6 d-flex justify-content-between align-items-center mb-4">
                <h2>Create a New Study Guide</h2>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
              <form method="POST" action="/studyGuides/create">
                <div class="mb-3">
                  <input type="text" class="form-control" name="title" placeholder="Enter study guide title" required />
                </div>
                <div class="mb-3">
                  <textarea class="form-control" name="content" rows="8" placeholder="Paste your notes" required></textarea>
                </div>
                <div class="text-begin">
                    <button class="btn btn-secondary" id="clear-notes-button">Clear notes</button>
                </div>
              </form>
            </div>
          </div>
	</div>

    <script>
        function clearStudyInput() {
            document.querySelector('textarea[name="content"]').value = "";
        }

        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("clear-notes-button").addEventListener("click", clearStudyInput);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>