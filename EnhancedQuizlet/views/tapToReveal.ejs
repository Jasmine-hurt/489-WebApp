<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Tap to Reveal</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/stylesheets/tapToReveal.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
	<%- include('components/navbar') %>

	<!-- Header Title -->
	<div class="d-flex justify-content-between align-items-center">
		<h1 id="title">Tap to Reveal</h1>
	</div>

	<div class="container text-center mt-5">
		<!-- Flashcard -->
		<div id="flashcard" class="p-5 bg-light border d-flex justify-content-center align-items-center rounded shadow">
			<h1 id="card-text" class="text-center m-0"></h1>
		</div>

		<!-- Control Buttons -->
		<button id="back-to-term" class="btn mt-4 btn-outline-secondary d-none">Back to Term</button>
		<div class="mt-3 d-flex justify-content-center">
			<button id="try-again" class="btn btn-outline-danger mx-2 d-none">Try Again</button>
			<button id="tap-to-reveal" class="btn btn-primary px-5 w-50 mx-2">Tap to Reveal</button>
			<button id="next-term" class="btn btn-outline-success mx-2 d-none">Next Term</button>
		</div>
	</div>

	<script src="/js/tapToReveal.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>